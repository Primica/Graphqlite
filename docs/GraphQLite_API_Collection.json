  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["health"]
        }
      }
    },
    {
      "name": "Create Node - Person",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"label\": \"person\",\n    \"properties\": {\n        \"name\": \"Alice\",\n        \"age\": 30,\n        \"city\": \"Paris\",\n        \"email\": \"alice@example.com\"\n    }\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/nodes",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "nodes"]
        }
      }
    },
    {
      "name": "Create Node - Company",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"label\": \"company\",\n    \"properties\": {\n        \"name\": \"TechCorp\",\n        \"sector\": \"Technology\",\n        \"employees\": 500,\n        \"city\": \"Paris\"\n    }\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/nodes",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "nodes"]
        }
      }
    },
    {
      "name": "Create Edge - Works At",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"fromNode\": \"Alice\",\n    \"toNode\": \"TechCorp\",\n    \"edgeType\": \"works_at\",\n    \"properties\": {\n        \"position\": \"Software Engineer\",\n        \"since\": \"2020\",\n        \"salary\": 75000\n    }\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/edges",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "edges"]
        }
      }
    },
    {
      "name": "Search Nodes - Persons",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"label\": \"person\",\n    \"conditions\": {\n        \"city\": \"Paris\"\n    },\n    \"limit\": 10\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/nodes/search",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "nodes", "search"]
        }
      }
    },
    {
      "name": "Find Path",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"fromNode\": \"Alice\",\n    \"toNode\": \"TechCorp\",\n    \"maxSteps\": 5,\n    \"isBidirectional\": true\n}"
